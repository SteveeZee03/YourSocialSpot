
<section class="new-post-section">
    <button type="submit" class="btn" id="create-new-post">+ Form a new Post!</button>
</section>

{{#if posts.length}}
<section>
    <h2> It's your Dash!</h2>
    <ul class="post-list">
        {{#each posts as |post|}}
        <li>
            {{> post-info post}}
            <a href="/dashboard/edit/{{post.id}}" class="edit-link"> Edit your Post</a>
        </li>
        {{/each}}
    </ul>
</section>
{{/if}}

<script src="/public/JavaScript/createPost.js"></script>